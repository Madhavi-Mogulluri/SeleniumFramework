<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Sanity Suite" verbose="4"
       thread-count="2" parallel="tests">


        <listeners>
            <listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
             <listener class-name="com.qa.listeners.AnnotationTransformer" />
            <listener class-name="com.qa.listeners.TestAllureListener" />

        </listeners>

    <test name="Login Page Test_chrome">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.qa.tests.LoginTest" />
        </classes>
    </test>
    <test name="Search Page Test_chrome">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.qa.tests.ProductResulstsPageTest" />
        </classes>
    </test>

    <test name="Accounts Page Test_chrome">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.qa.tests.AccountsPageTest" />
        </classes>
    </test>

</suite>